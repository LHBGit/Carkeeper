<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/music_main_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/carkeeper_main_color"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_24"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toLeftOf="@+id/my_like"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/music_download_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/my_like"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:background="@drawable/list_mylike_light"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <TextView
            android:text="I'm a freak"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/music_name_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=" -- "
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/music_person_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Enrique Iglesias"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/music_person_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="248dp"
        android:layout_height="248dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/default_person_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/pause"
            android:layout_gravity="center"
            android:layout_width="56dp"
            android:layout_height="56dp" />
    </FrameLayout>
    <TextView
        android:gravity="center"
        android:text="Baby,come and give to me\n
        'Vause I'm a freak\n
        The way you're poppin' and droppin'"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="03:38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatSeekBar
            android:max="100"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="02:38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/random"
            android:layout_marginRight="56dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/before"
            android:layout_marginRight="56dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/next"
            android:layout_marginRight="56dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/music_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
