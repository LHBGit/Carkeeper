<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/item_title_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_round"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/system_msg_image"
            android:src="@drawable/default_person_icon"
            android:padding="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <RelativeLayout
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/system_msg_title"
                android:text="【系统消息】"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/system_msg_time"
                android:text="12:30 PM"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/system_msg_title"
                android:textSize="@dimen/font_size_11"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/system_msg_content"
                android:layout_below="@+id/system_msg_time"
                android:layout_marginTop="8dp"
                android:text="您的车型协议更新成功！——恭喜恭喜恭喜恭的车型协型协议更新成功！——恭喜恭喜恭喜恭的车型协型协议更新成功！——恭喜恭喜恭喜恭的车型协型协议更新成功！——恭喜恭喜恭喜恭的车型协议更新成功！——恭恭喜"
                android:textSize="@dimen/font_size_14"
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

