<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/item_title_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_num_title"
            android:text="@string/order_num_title"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/carkeeper_order_1"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
        <TextView
            android:id="@+id/order_num"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="XXDD201607280909LL"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/carkeeper_order_2"
            android:layout_toRightOf="@+id/order_num_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/reservation_time"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="08:09PM"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/carkeeper_order_2"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />

        <View
            android:id="@+id/order_divider"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/order_num_title"
            android:background="@color/colorListDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView
            android:id="@+id/car_image"
            android:layout_below="@+id/order_divider"
            android:layout_alignParentLeft="true"
            android:src="@drawable/default_person_icon"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <TextView
            android:id="@+id/gas_station_title"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/car_image"
            android:layout_toRightOf="@+id/car_image"
            android:text="@string/gas_station_title"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/gas_num_title"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/car_image"
            android:layout_toRightOf="@+id/car_image"
            android:text="@string/num_of_gas_title"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gas_station_name"
            android:gravity="center_vertical|left"
            android:layout_alignTop="@+id/car_image"
            android:layout_toRightOf="@+id/gas_station_title"
            android:layout_alignLeft="@+id/gas_num"
            android:text="湛江霞山加油站"
            android:textColor="@color/carkeeper_order_1"
            android:textSize="@dimen/font_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gas_num"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical|left"
            android:layout_alignBottom="@+id/car_image"
            android:layout_toRightOf="@+id/gas_num_title"
            android:text="60元"
            android:textColor="@color/carkeeper_order_1"
            android:textSize="@dimen/font_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/order_detail"
            android:textSize="@dimen/font_size_14"
            android:layout_marginTop="16dp"

            android:gravity="center"
            android:textColor="@color/carkeeper_emphasize_color"
            android:layout_below="@+id/car_image"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_width="88dp"
            android:layout_height="32dp" />
    </RelativeLayout>

</RelativeLayout>
