<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_periphery_gas_station_name"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/carkeeper_order_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_periphery_gas_station_price"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/carkeeper_main_color"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/periphery_gas_station_linear_layout"
        android:layout_below="@+id/item_periphery_gas_station_name"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/periphery_gas_station_address"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/textColorPrimary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/gas_unit"
            android:layout_gravity="right|top"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/carkeeper_order_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_below="@+id/periphery_gas_station_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/periphery_gas_station_distance"
            android:background="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/carkeeper_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/periphery_gas_station_belong"
            android:layout_marginLeft="8dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/periphery_gas_station_distance"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/carkeeper_order_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/periphery_gas_station_type"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/periphery_gas_station_belong"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/carkeeper_order_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>
