<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/top_bar_tv_1"
        android:layout_alignParentLeft="true"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/top_bar_tv_title"
        android:layout_marginLeft="@dimen/top_bar_margin_horizontal"
        android:padding="0dp"
        android:layout_toRightOf="@+id/top_bar_tv_1"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:id="@+id/top_bar_tv_2"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_toLeftOf="@+id/top_bar_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:layout_marginLeft="@dimen/top_bar_margin_horizontal"
        android:layout_marginRight="@dimen/top_bar_margin_horizontal"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:id="@+id/top_bar_tv_3"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/top_bar_tv_4"
        android:layout_centerVertical="true"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/top_bar_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/top_bar_tv_5"
        android:layout_alignParentRight="true"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
